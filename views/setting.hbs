<div class = "SettingsManagment">
        <div id="UploadHeader">
            <h3>Upload A New Post </h3>
            <p id="arrowDown"> &#10095 </p>
        </div>
        <div id = "UploadBody"> 
            <div class="form-group">
                <form action="node.js/">
                    <div class = "formSection">
                        <label class="form-label" for="img">Select image:</label>
                        <input class="form-input" type="file" id="img" name="img" accept="image/*">
                    </div><br>
                    <div class = "formSection">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-input" type="text" placeholder="Ex: Computer">
                    </div><br>
                    <div class = "formSection">
                        <label class="form-label" for="desc">Description</label>
                        <textarea class="form-input" type="text" placeholder="Ex: A very good Computer with intel i7 8700 processor and Nividia RTX 2070"></textarea>
                    </div><br>
                    <div class = "formSection">
                         <label class="form-label" for="title">Price</label>
                        <input class="form-input" type="text" placeholder="Ex: 800$">
                    </div>
                    <br><hr>
                    <button class = "btn" id ="sendBtn"> Upload </button>
                </form>                
            </div>
        </div>
    </div>
