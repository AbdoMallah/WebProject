<div class = "ordersPage">
    <h1> Orders </h1>
    <div class="form-group">
        <form action="/filter-order" method="POST">
            <div class="form-group">
            <label class="form-radio form-inline">
                <input type="radio" name="sent"  value="unsent"><i class="form-icon"></i> Unsent
            </label>
            <label class="form-radio form-inline">
                <input type="radio" name="sent" value="sent"><i class="form-icon"></i> Sent
            </label>
            <label class="form-radio form-inline">
                <input type="radio" name="sent" checked="" value="showAll"><i class="form-icon"></i> Show All
            </label>
            <button type="submit"> Filter </button>
            </div> 
        </form>
    </div>
    <div class = "orders"> 
    {{#if ordersValue}}
        {{#each ordersValue}}
        <div id = "orderInfo">
            <h3>Name: {{BuyerName}}</h3>
            <p>Id: {{Id}}</p>
            <p>Email:{{BuyerEmail}}</p>
            <p>Address: {{BuyerAddress}}</p>
            <p>Zip Code: {{BuyerZipCode}}</p>
            <p>Send: {{IfSent}} (0 = Not Sent, 1 = Sent)</p>
            {{#unless IfSent}}
            <p> The Product Has Not Been Shipped Yet :O</p>
            <form method="POST" action="/orders/sendOrder/{{Id}}">
                <button class="btn" id ="sendBtn"> Send Order </button>
            </form>
            {{else}}
            <p> The Product Has Already Been Shipped :D</p>
            <form method="POST" action="/orders/deleteOrder/{{Id}}">
                <button id ="deleteBtn"> Delete </button>
            </form>
            {{/unless}}
        </div>
        {{/each}}
    </div>
    {{else}}
        <p> No Orders Yet Or All The Orders have been Sent</p>
    {{/if}}
</div>
