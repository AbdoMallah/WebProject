<div class="form-group" id="edit-form-group">
    {{#if selectedCategory}}
    <form action="/editC/categoryId={{selectedCategory.Id}}" method="POST">
        <div class = "formSection">
            <label class="form-label" for="name">Category Name</label>
            <input class="form-input" type="text" name="name" placeholder="Ex: car " value="{{selectedCategory.Name}}" required>
        </div><br>
        <br><hr>
        <button class = "btn" id ="sendBtn"> Edit </button>
    </form> 
    {{/if}}         
</div>