<div id="categoriesPage">
    <h1> Categories Settings</h1>
    <div class = "categorySetting">
        <h2> My Categories</h2>
        <ul id="categoriesList"> 
        {{#if selectedCategories}}
            {{#each selectedCategories}}
            <li> {{this.Name}} <div> <a id="sendBtn" href="/categories/editC/{{this.Id}}"> Edit </a><a id="deleteBtn" href="categories/deleteC/{{this.Id}}"> &#10005 </a> </div></li>
            {{/each}}
        {{/if}}
            {{!-- <li> Cars </li> --}}
        {{#unless selectedCategories}}
            <li> No Categories Yet </li>
        {{/unless}}
        </ul>
    </div>
    <div id="categoriesSettings">
        <div class="categorySetting"> 
            <h2> Add Category </h2>
            {{#if errMSG}}
            <ul>
                {{#each errMSG}}
                <p class="errorMSG"> {{this}} </p>
                {{/each}}
            </ul>
            {{/if}}
            <div class="form-group">
                <form action="/add-category" method="POST">
                    <label class="form-label" for="name">Category name</label>
                    <input class="form-input" type="text" name="name" placeholder="Ex: Car " required>
                    <br>
                    <button class="btn" id ="sendBtn"> Add </button>
                </form>                
            </div>
        </div>
    </div>
</div>